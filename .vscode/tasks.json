{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar SFML Game",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Iinclude",
        "-IC:/msys64/mingw64/include",
        "src/main.cpp",
        "-LC:/msys64/mingw64/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-o",
        "bin/game.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
